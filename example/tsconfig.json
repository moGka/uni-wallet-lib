{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "uni-wallet-lib": ["../../packages/core/src"],
      "uni-wallet-lib/*": ["../../packages/core/src/*"]
    }
  },
  "include": [
    "src",
    "../../packages/core/src"
  ],
  "exclude": [
    "node_modules"
  ]
}